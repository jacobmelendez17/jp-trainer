{
  "name": "jp-trainer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev": "npm run dev:api & npm run dev:web"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "prisma": "^6.19.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "ffmpeg-static": "^5.3.0"
  },
  "prisma": {
    "seed": "ts-node --project prisma/tsconfig.seed.json --transpile-only prisma/seed.ts"
  }
}
