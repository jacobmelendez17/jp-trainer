generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // For email/password:
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]

  wanikaniConnection WanikaniConnection?

  pronunciationProgress UserPronunciationChallengeProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WanikaniConnection {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tokenEnc  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PronunciationChallenge {
  id         String   @id @default(cuid())
  title      String
  orderIndex Int      @unique

  sentences  PronunciationSentence[]
  progresses UserPronunciationChallengeProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PronunciationSentence {
  id           String   @id @default(cuid())
  challengeId  String
  challenge    PronunciationChallenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  // Display text (kanji/kana)
  jpText       String

  // Canonical reading to grade against (recommend: hiragana)
  jpReading    String

  // Optional pre-built ruby HTML, if you want perfect furigana rendering
  furiganaHtml String?

  // English translation
  enText       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([challengeId])
}

model UserPronunciationChallengeProgress {
  id          String  @id @default(cuid())
  userId      String
  challengeId String
  stars       Int     @default(0) // 0..5

  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge   PronunciationChallenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([userId, challengeId])
  @@index([userId])
  @@index([challengeId])
}
